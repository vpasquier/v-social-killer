{
  "name": "Social Killer",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Social Killer",
  "icons": {
    "16": "images/v-16.png",
    "128": "images/v-128.png"
  },
  "content_security_policy": "script-src https://*.google.com 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "../../scripts/global.js",
      "../../scripts/background.js"
    ],
    "persistent": true
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking"
  ],
  "page_action": {
    "default_icon": {
      "19": "images/v-19.png",
      "38": "images/v-38.png"
    },
    "default_title": "Social Killer",
    "default_popup": "popup.html"
  }
}